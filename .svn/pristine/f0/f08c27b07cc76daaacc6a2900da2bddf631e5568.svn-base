.cell {
    -fx-border-color: black;
    -fx-border-width: 2px;
}

.cell-highlight-Alkupiste {
    -fx-background-color:derive(green,0.6);
}
.cell-hover-highlight-Alkupiste {
    -fx-background-color:derive(green,0.9);
}

.cell-highlight-Loppupiste {
    -fx-background-color:derive(red,0.6);
}
.cell-hover-highlight-Loppupiste {
    -fx-background-color:derive(red,0.9);
}

.cell-highlight-Este {
    -fx-background-color:derive(dodgerblue,0.6);
}
.cell-hover-highlight-Este {
    -fx-background-color:derive(dodgerblue,0.9);
}

.cell-higlight-Poista {
	-fx-background-color:derive(grey,0.6); 
}

.cell-hover-highlight-Poista {
	-fx-background-color:derive(grey,0.9);
}

#pane{
    -fx-background-color:
        linear-gradient(#686868 0%, #232723 25%, #373837 75%, #757575 100%),
        linear-gradient(#020b02, #3a3a3a),
        linear-gradient(#9d9e9d 0%, #6b6a6b 20%, #343534 80%, #242424 100%),
        linear-gradient(#8a8a8a 0%, #6b6a6b 20%, #343534 80%, #262626 100%),
        linear-gradient(#777777 0%, #606060 88%, #505250 89%, #2a2b2a 100%);
    -fx-background-insets: 0,1,4,5,6;
    -fx-background-radius: 9,8,5,4,3;
    -fx-padding: 15 30 15 30;
    -fx-font-family: "Helvetica";
    -fx-font-size: 18px;
    -fx-font-weight: bold;
    -fx-text-fill: white;
    -fx-effect: dropshadow( three-pass-box , rgba(255,255,255,0.2) ,
                1, 0.0 , 0 , 1);
}